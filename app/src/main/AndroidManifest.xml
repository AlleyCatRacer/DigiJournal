<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s22.digijournal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_diary"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigiJournal">
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.DigiJournal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NavigationDrawer"
            android:exported="false"
            android:theme="@style/Theme.DigiJournal.NoActionBar"/>

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.DigiJournal.AppBarOverlay"/>
    </application>

</manifest>