<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">


    <fragment
        android:id="@+id/nav_home"
        android:name="com.s22.digijournal.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_taskAddFragment"
            app:destination="@id/add_task_fragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_tasks"
            app:destination="@id/nav_tasks" />
    </fragment>


    <fragment
        android:id="@+id/nav_task_details"
        android:name="com.s22.digijournal.ui.task.TaskDetailsFragment"
        android:label="Task Details"
        tools:layout="@layout/fragment_task_details" />
    <fragment
        android:id="@+id/add_task_fragment"
        android:name="com.s22.digijournal.ui.task.TaskAddFragment"
        android:label="fragment_task_add"
        tools:layout="@layout/fragment_task_add" />
    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.s22.digijournal.ui.overview.TasksFragment"
        android:label="activity_tasks"
        tools:layout="@layout/activity_tasks" >
        <action
            android:id="@+id/action_nav_tasks_to_nav_task_details"
            app:destination="@id/nav_task_details" />
    </fragment>


</navigation>