<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/Theme.DigiJournal.AppBarOverlay"
    android:background="@drawable/vertical_rainbow_gradient">

    <ImageView
        android:id="@+id/nav_header_main_image"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/home_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nav_header_main_headline"
        />

    <TextView
        android:id="@+id/nav_header_main_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/nav_header_title"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_header_main_user_label"
        app:layout_constraintLeft_toRightOf="@id/nav_header_main_image"
        />

    <TextView
        android:id="@+id/nav_header_main_user_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/nav_header_subtitle"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/nav_header_main_image"
        app:layout_constraintTop_toBottomOf="@id/nav_header_main_headline"/>
</androidx.constraintlayout.widget.ConstraintLayout>